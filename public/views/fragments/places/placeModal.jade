div()
  .row
    .col-xs-6
      a(href="" class="place-modal pull-left" data-dismiss="modal")
        span(class="glyphicon glyphicon-arrow-left")  
    .col-xs-6
      a(href="" class="place-modal pull-right" ng-click="$ctrl.goToMap($ctrl.spot)" ng-if="$ctrl.view==='list'")
        span(class="glyphicon glyphicon-map-marker")
        //img(src="/images/google- icons/ic_location_on_black_24dp/web/ic_location_on_black_24dp_1x.png")
      a(href="" class="place-modal pull-right" ng-click="$ctrl.goToList($ctrl.spot)" ng-if="$ctrl.view==='map'")
        span(class="glyphicon glyphicon-list")
        //img(src="/images/google- icons/ic_list_black_24dp/web/ic_list_black_24dp_1x.png")
      
  hr(class="low")
  div(class="place-image" id="img{{$ctrl.spot._id}}")
    //<img  src="{{$ctrl.spot.image_link}}" alt="{{$ctrl.spot.name}}" style="width=500px" >
  hr
  p {{ $ctrl.spot.address }}
  p {{ $ctrl.spot.cp + ' ' + $ctrl.spot.city }}
  p {{ $ctrl.spot.tel }}
  p {{ $ctrl.spot.horaires }}
  p: em(ng-bind-html="$ctrl.spot.description")
  <hr>
  .comments
    .row
      .col-xs-8
        p: a(href="" ng-click="$ctrl.getComments($ctrl.spot)") {{ 'Commentaires (' + $ctrl.commentsCount($ctrl.spot) + ')' }}
      .col-xs-4
        p(class="pull-right"): a(href="" ng-click="$ctrl.addComment()") Ajouter
    .row
      .col-xs-12
        ul(class="list-group")
          li(ng-repeat="comment in $ctrl.comments" class="list-group-item")
            .row
              .col-xs-12
                p(ng-bind-html="comment.text")
            .row
              .col-xs-12
                span(class="pull-right small") {{ comment.author.name  + ', ' + (comment.postedAt | date:'dd-M-yyyy')}}  
