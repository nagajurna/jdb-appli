.main-wrapper(ng-init="$ctrl.getPlaces()")
  .row.top-title
    .col-xs-4
      p PLACES
    .col-xs-8
      <sort-by property-name="$ctrl.propertyName" reverse="$ctrl.reverse"></sort-by>  
  
  .wrapper
    p: a(href='/#/admin/places/new') Ajouter
    ul(class="list-group")
      li(class="list-group-item" ng-repeat='spot in $ctrl.spots | orderBy:$ctrl.propertyName:$ctrl.reverse' id="{{ spot._id }}" )
        .row
          .col-xs-8
            p: a(href='' ng-click="$ctrl.goToPlace(spot)") {{spot.name}}
            p {{ spot.address  + ' ' + spot.cp + '&nbsp;' + spot.city }}
            p(class="small"): strong
              span(ng-repeat='g in spot.games') {{ g.name + ' ' }}
            p(class="small") {{ 'Dernière mise à jour : ' + (spot.updated | date:'dd-M-yyyy') }}
          .col-xs-2
            p(class="pull-right"): a(href='/#/admin/places/name/{{ spot.nameAlpha }}/edit'): span(class="glyphicon glyphicon-pencil")
          .col-xs-2
            p(class="pull-right"): a(href='' ng-click="$ctrl.delete(spot._id)"): span(class="glyphicon glyphicon-trash")

