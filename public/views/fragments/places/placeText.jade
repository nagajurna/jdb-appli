.top-title
  .row
    .col-xs-6
      a(href="" ng-click="$ctrl.back()"): <span class="glyphicon glyphicon-arrow-left">
    .col-xs-6
      a(href="" ng-if="$ctrl.view==='list'" ng-click="$ctrl.placeToggleView()" class="visible-xs pull-right")
        span(class="glyphicon glyphicon-map-marker")
hr(class="low")
.wrapper(ng-init="$ctrl.getPlace()")
  div
    h4 {{ $ctrl.spot.name }}
    p: span(ng-repeat="game in $ctrl.spot.games" class="text-uppercase small"): strong {{ game.name + ' ' }}
    p {{ $ctrl.spot.address }}
    p {{ $ctrl.spot.cp + ' ' + $ctrl.spot.city }}
    p: em(ng-bind-html="$ctrl.spot.description")
    <hr>
    .comments
      p {{ 'Commentaires (' + $ctrl.comments.length + ')&ensp;' }}
        a(href="{{ $ctrl.newCommentPath }}") <span class="glyphicon glyphicon-plus">
      ul(class="list-group")
        li(ng-repeat="comment in $ctrl.comments" class="list-group-item")
          .row
            .col-xs-12
              p(ng-bind-html="comment.text")
          .row
            .col-xs-12
              span(class="pull-right small") {{ comment.author.name  + ', ' + (comment.postedAt | date:'dd-M-yyyy')}}  
