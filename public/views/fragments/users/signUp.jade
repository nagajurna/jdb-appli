div(title="formulaire d'inscription")
  form(novalidate)
    p(ng-bind='$ctrl.form.message' class='small error-message')
    .form-group
      label(for="name") Nom d'utilisateur
      input(type='text' class="form-control" id="name" ng-model='$ctrl.user.name')
      p(ng-bind='$ctrl.form.errors.name.message' class='small error-message')  
    .form-group
      label(for="email") Email
      input(type='text' class="form-control" id="email" ng-model='$ctrl.user.email')
      p(ng-bind='$ctrl.form.errors.email.message' class='small error-message')
    .form-group
      label(for="password") Mot de passe
      input(type='password' class="form-control" id="password" ng-model='$ctrl.user.password')
      p(ng-bind='$ctrl.form.errors.password.message' class='small error-message')
    .form-group
      label(for="passwordConfirm") Confirmation
      input(type='password' class="form-control" id="passwordConfirm" ng-model='$ctrl.user.passwordConfirm')
      p(ng-bind='$ctrl.form.errors.passwordConfirm.message' class='small error-message')
    p
      input(type='submit' class="btn btn-default" ng-click='$ctrl.signup()' value='valider')

    a(href='' ng-click="$ctrl.template ='sign-in'") Connexion
