div
  form(novalidate)
    p(ng-bind='$ctrl.form.message' class='small error-message')
    .form-group
      label(for='password') Nouveau mot de passe
      input(type='password' class="form-control" ng-model='$ctrl.user.password' id='password')
      p(ng-bind='$ctrl.form.errors.password.message' class='small error-message')
    .form-group
      label(for='passwordConfirm') Confirmation
      input(type='password' class="form-control" ng-model='$ctrl.user.passwordConfirm' id='passwordConfirm')
      p(ng-bind='$ctrl.form.errors.passwordConfirm.message' class='small error-message')
    p
      input(type='submit' class='btn btn-default' ng-click='$ctrl.forgotPasswordReset()' value='valider')
