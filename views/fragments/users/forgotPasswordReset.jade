div
  h1 Cr√©er un nouveau mot de passe

  form(novalidate)
    p
      span(ng-bind='$ctrl.form.message')
    p
      label nouveau mot de passe
      input(type='password' ng-model='$ctrl.user.password')
      span(ng-bind='$ctrl.form.errors.password.message')
    p
      label nouveau mot de passe confirm
      input(type='password' ng-model='$ctrl.user.passwordConfirm')
      span(ng-bind='$ctrl.form.errors.passwordConfirm.message')
    p
      input(type='button' ng-click='$ctrl.forgotPasswordReset()' value='valider')
