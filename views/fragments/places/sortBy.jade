  button(class="btn reverse-btn" type="button" ng-click="$ctrl.toggleReverse()"): span(ng-class="{reverse: $ctrl.reverse}")
  button(class="btn dropdown-toggle" type="button" data-toggle="dropdown") Tri par {{ $ctrl.labels[$ctrl.property] + ' ' }}
    span(class="caret")
  ul(class="dropdown-menu")
    li: a(href="" ng-click="$ctrl.sortBy('nameAlpha')") {{ $ctrl.labels['nameAlpha'] }}
    li: a(href="" ng-click="$ctrl.sortBy('cp')") {{ $ctrl.labels['cp'] }}
    li: a(href="" ng-click="$ctrl.sortBy('updated')") {{ $ctrl.labels['updated'] }}
