.main-wrapper(ng-init="$ctrl.showGames()")
  .row.top-title
    .col-xs-12
      p GAMES
  
  .wrapper
    h4: a(href='/#/admin/games/new'):  span(class="glyphicon glyphicon-plus") 
    ul(class="list-group")
      li(class="list-group-item" ng-repeat='game in $ctrl.games')
        .row
          .col-xs-8
            p {{game.name | uppercase}} 
        
          .col-xs-2
            p(class="pull-right"): a(href='/#/admin/games/{{game.pathname}}'): span(class="glyphicon glyphicon-pencil") 
          
          .col-xs-2
            p(class="pull-right"): a(href='' ng-click="$ctrl.delete(game._id)"): span(class="glyphicon glyphicon-trash")  

